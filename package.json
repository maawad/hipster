{
    "name": "hipster",
    "displayName": "Hipster",
    "description": "ðŸ”¥ Navigate HIP GPU assembly with bidirectional source-assembly highlighting and powerful inspection tools",
    "version": "1.0.0",
    "publisher": "TinkerCode",
    "icon": "resources/icon.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Debuggers",
        "Visualization"
    ],
    "keywords": [
        "hip",
        "rocm",
        "gpu",
        "assembly",
        "gcn",
        "amd"
    ],
    "activationEvents": [
        "onLanguage:cpp",
        "onLanguage:c",
        "onLanguage:cuda-cpp"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "hipster.showAssemblySideBySide",
                "title": "Hipster: View Assembly",
                "icon": "$(chip)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "hipster.showAssemblySideBySide",
                    "when": "resourceExtname =~ /\\.(hip|cu|cpp|cxx|cc|c|h|hpp|hxx)$/",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "command": "hipster.showAssemblySideBySide",
                    "when": "resourceExtname =~ /\\.(hip|cu|cpp|cxx|cc|c|h|hpp|hxx)$/",
                    "group": "hipster"
                }
            ]
        },
        "configuration": {
            "title": "Hipster",
            "properties": {
                "hipster.buildDirectories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "build"
                    ],
                    "description": "Build directory names to search for assembly files (relative to workspace root). Multiple directories enable version comparison."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "20.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vscode/vsce": "^3.7.0",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/maawad/Hipster.git"
    },
    "license": "MIT"
}
